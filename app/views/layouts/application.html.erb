<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN">

<html lang="en">
<head>
  <title>On-Site
  Interview</title><%= csrf_meta_tags %><%= csp_meta_tag %><%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %><%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %><%= javascript_pack_tag 'application' %>
</head>

<body>
  <div class="container my-5">
    <% if notice.present? %>

    <p class="alert alert-primary">
    <%= notice %></p><% end %><% if alert.present? %>

    <p class="alert alert-danger">
    <%= alert %></p><% end %><%= yield %>
  </div>
</body>
</html>
